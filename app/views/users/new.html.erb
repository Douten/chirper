<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @user do |f| %>
		  <%= f.input :name %>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		  <%= f.button :submit, class: 'btn-primary' %>
	  <% end %>
  </div>
</div>
